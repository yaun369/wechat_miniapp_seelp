/* pages/data/data.wxss */
@import "/pages/setTime/setTime.wxss";
.calendar {
  width: 750rpx;
}

.header {
  font-size: large;
  color: #605eac;
}

.board {
  background-color: #dddcff;
}

.value {
  width: 350rpx;
  height: 350rpx;
  border: 10rpx solid #62c4d9;
  border-radius: 50%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 28rpx;
  color: #605eac;
}

.num{
  font-size: 100rpx;
  margin: 20rpx;
  font-weight: 800;
  color: #fff;
}

.tag{
  color: #ffd700;
}